@page "/Cars/Delete/{Id:int}";
@inject HttpClient _http
@inject NavigationManager _navManager

<div>
  <h1 class="mb-3">Delete record of the car</h1>
  <p>Are you sure you want to delete the client with Id @Id?</p>
  <button class="btn btn-primary" @onclick="DelteCarData">Delete</button>
  <a class="btn btn-secondary" href="/Cars">Cancel</a>
</div>

@code {
  [Parameter]
  public int Id { get; set; }

  protected async Task DelteCarData()
  {
    var response = await _http.DeleteAsync("https://localhost:7122/api/CarDetailes/" + Id);
    _navManager.NavigateTo("/Cars");
  }
}
